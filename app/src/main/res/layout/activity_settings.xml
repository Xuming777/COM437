<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".SettingsActivity">

    <Button
        android:id="@+id/settingBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_button"
        android:text="Setting"
        app:layout_constraintTop_toBottomOf="@id/xApiKeyEt" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/weatherAppIdEt"
        helperTextTextColor="#888888"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:hint="weather_app_id"
        android:textColorHint="#888888"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:paddingEnd="0dp"
            android:paddingStart="0dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/xApiKeyEt"
        helperTextTextColor="#888888"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:hint="x-api-key"
        android:textColorHint="#888888"
        app:layout_constraintTop_toBottomOf="@id/weatherAppIdEt">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:paddingEnd="0dp"
            android:paddingStart="0dp" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>